#include <iostream>

using namespace std;
void findMinAndMax(int arr[], int low, int high, int *max, int *min)
{
	int mid, max1, max2, min1, min2;
		if (high - low == 1)	
	{
		if (arr[low] > arr[high])	
		{ *max = arr[low];
		  *min = arr[high];
    	}
	else{
		*max =arr[high];
		*min =arr[low];
	}
   }
   else if(low == high)
   {
   	*min = *max = arr[low];
   }
   else if(low<high){
   	mid =(low+high)/2;
   		findMinAndMax(arr, low, mid, &max1, &min1);
   		findMinAndMax(arr, mid+1, high, &max2, &min2);
   		if(max1>max2){
   			*max = max1;}
   			
   		else{
   			*max = max2;
			}
			
		if(min1< min2){
			*min = min1;
		}
		else{
			*min =min2;
		}
		}
}
   
int main(){
	int iaArr[500000], iNum, i;
	int iMax=0,iMin=0;
	cout<<"Enter the size of the array";
	cin>> &iNum;
	
	cout<<"Enter the elements in the array";
	
	for(i=0; i<iNum; i++){
		cin>> &iaArr[i];
		findMinAndMax(iaArr,0,iNum-1, &iMax, &iMin);
		
	}
	
	cout<<" Maximum = " + <<iMax;
	cout<<"Minimum = " + <<iMin;
	return 0;
	
}
   
   
